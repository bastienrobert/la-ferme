{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "outDir": "dist",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules/*", "dist/*"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
